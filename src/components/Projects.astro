---
interface Props {
  projects: Array<{
    name: string;
    description: string;
    startDate: Date;
    endDate?: Date;
    role: string;
    teamSize?: number;
    highlights: string[];
    techStack: string[];
  }>;
}

const { projects } = Astro.props;

// 默认显示最近的5个项目
const INITIAL_PROJECTS_COUNT = 5;
const initialProjects = projects.slice(0, INITIAL_PROJECTS_COUNT);
const remainingProjects = projects.slice(INITIAL_PROJECTS_COUNT);

function formatDate(date: Date) {
  return date.toLocaleDateString('zh-CN', { year: 'numeric', month: 'numeric' });
}
---

<section class="mb-8 print:mb-6">
  <h2 class="text-2xl font-bold mb-4 text-gray-800 dark:text-gray-200">项目经验</h2>
  
  <div class="space-y-6" id="projects-container">
    <!-- 初始显示的项目 -->
    {initialProjects.map((project) => (
      <div class="project-item print:break-inside-avoid">
        <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-1">
          <div>
            <h3 class="text-lg font-semibold text-gray-700 dark:text-gray-300">
              {project.name}
              {project.teamSize && (
                <span class="text-sm font-normal text-gray-500 dark:text-gray-500">
                  （团队规模：{project.teamSize}人）
                </span>
              )}
            </h3>
            <div class="text-gray-600 dark:text-gray-400">
              {project.role}
            </div>
          </div>
          <div class="text-gray-500 dark:text-gray-500 text-sm">
            {formatDate(project.startDate)} - {project.endDate ? formatDate(project.endDate) : '至今'}
          </div>
        </div>
        
        <p class="mt-2 text-gray-700 dark:text-gray-300">{project.description}</p>
        
        <ul class="mt-2 space-y-1 text-gray-600 dark:text-gray-400 list-disc list-inside">
          {project.highlights.map((highlight) => (
            <li>{highlight}</li>
          ))}
        </ul>
        
        <div class="mt-3 flex flex-wrap gap-2">
          {project.techStack.map((tech) => (
            <span class="px-2 py-1 text-sm bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full">
              {tech}
            </span>
          ))}
        </div>
      </div>
    ))}

    <!-- 剩余的项目（初始隐藏） -->
    <div id="remaining-projects" class="hidden space-y-6">
      {remainingProjects.map((project) => (
        <div class="project-item print:break-inside-avoid">
          <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-1">
            <div>
              <h3 class="text-lg font-semibold text-gray-700 dark:text-gray-300">
                {project.name}
                {project.teamSize && (
                  <span class="text-sm font-normal text-gray-500 dark:text-gray-500">
                    （团队规模：{project.teamSize}人）
                  </span>
                )}
              </h3>
              <div class="text-gray-600 dark:text-gray-400">
                {project.role}
              </div>
            </div>
            <div class="text-gray-500 dark:text-gray-500 text-sm">
              {formatDate(project.startDate)} - {project.endDate ? formatDate(project.endDate) : '至今'}
            </div>
          </div>
          
          <p class="mt-2 text-gray-700 dark:text-gray-300">{project.description}</p>
          
          <ul class="mt-2 space-y-1 text-gray-600 dark:text-gray-400 list-disc list-inside">
            {project.highlights.map((highlight) => (
              <li>{highlight}</li>
            ))}
          </ul>
          
          <div class="mt-3 flex flex-wrap gap-2">
            {project.techStack.map((tech) => (
              <span class="px-2 py-1 text-sm bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full">
                {tech}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- 查看更多按钮 -->
    {remainingProjects.length > 0 && (
      <div class="flex justify-center mt-8 no-print">
        <button
          id="show-more-btn"
          class="px-6 py-2 text-sm font-medium text-gray-700 dark:text-gray-200 bg-gray-100 dark:bg-gray-800 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors duration-200"
        >
          查看更多项目经验 ({remainingProjects.length})
        </button>
      </div>
    )}
  </div>
</section>

<script>
  // 处理查看更多按钮点击事件
  const showMoreBtn = document.getElementById('show-more-btn');
  const remainingProjects = document.getElementById('remaining-projects');

  if (showMoreBtn && remainingProjects) {
    showMoreBtn.addEventListener('click', () => {
      remainingProjects.classList.toggle('hidden');
      const isExpanded = !remainingProjects.classList.contains('hidden');
      showMoreBtn.textContent = isExpanded ? '收起项目经验' : `查看更多项目经验 (${remainingProjects.querySelectorAll('.project-item').length})`;
      
      // 平滑滚动到新显示的内容
      if (isExpanded) {
        remainingProjects.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  }
</script>

<style>
  /* 添加展开/收起动画 */
  #remaining-projects {
    transition: all 0.3s ease-in-out;
  }

  #remaining-projects.hidden {
    display: none;
  }
</style> 